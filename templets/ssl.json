//------------------------------------------------------------

{
    // 一台机器上，可以混合多个IP、多个端口、多个协议定义多个本地端服务：
    "locals": [
        //{   // Linux透明代理：
        //    "local_address": "127.0.0.1",
        //    "local_port": 61082,
        //    "protocol": "redir",
        //    "tcp_redir": "redirect"
        //},
        //{   // 本机SOCKS5代理：
        //    //"acl": "c:\\ss\\config\\61080.acl",  // Windows平台
        //    "acl": "/etc/ss/61080.acl",
        //    //"socks5_auth_config_path": "c:\\ss\\config\\auth.json",  // Windows平台
        //    "socks5_auth_config_path": "/etc/ss/auth.json",
        //    "local_address": "127.0.0.1",
        //    "local_port": 61080
        //},
        {   // 局域网SOCKS5代理：
            //"acl": "c:\\ss\\config\\ssl.acl",  // Windows平台
            "acl": "/etc/ss/ssl.acl",
            //"socks5_auth_config_path": "c:\\ss\\config\\auth.json",  // Windows平台
            "socks5_auth_config_path": "/etc/ss/auth.json",
            "local_address": "192.168.250.60",
            "local_port": 61081
         }
    ],

    // 要连接的远程端服务器列表。定义多个时，本地端可使用负载均衡：
    "servers": [
        //{
        //    //"timeout": 3600,
        //    "tcp_weight": 1.0,
        //    "address": "127.0.0.1",     // 本机上部署的远程端
        //    "port": 8386,
        //    "method": "aes-256-gcm",
        //    "password": "Password@Port-8386"
        //},
        //{
        //    //"timeout": 3600,
        //    "tcp_weight": 0.8,
        //    "address": "x.x.x.x",
        //    "port": 8387,
        //    "method": "aes-256-gcm",
        //    "password": "Password@Port-8387"
        //},
        {
            //"timeout": 3600,
            "tcp_weight": 1.0,
            "address": "y.y.y.y",
            "port": 8388,
            "method": "aes-256-gcm",
            "password": "Password@Port-8388"
        }
    ],

    // 负载均衡：
    //"balancer": {
    //    "max_server_rtt": 3,        // 服务器响应超时
    //    "check_interval": 10,       // 健康检查间隔
    //    "check_best_interval": 5    // 最优服务器检查间隔（可选，通常小于健康检查间隔）
    //},

    // 全局：
    "mode": "tcp_only",
    "no_delay": false,
    "keep_alive": 15,
    "timeout": 3600,

    // 关于fastopen的支持：
    // https://github.com/shadowsocks/shadowsocks/wiki/Feature-Comparison-across-Different-Versions
    "fast_open": true,

    // 日志：trace=0, debug=1, info=2, warn=3, error=4, off(pseudo level to disable all logging for the target)
    "log": {
        "writers": [
            {
                "file": {
                    //"level": 2,     // 默认0。环境变量RUST_LOG优先
                    "format": {
                        "without_time": false,
                    },
                    //"directory": "c:\\ss\\log",   // Windows平台
                    "directory": "/var/log/ss",
                    "prefix": "ssl",
                    "rotation": "daily",
                    "max_files": 32
                }
            }
        ]
    },

    // 关于workers的支持：
    // https://github.com/shadowsocks/shadowsocks/wiki/Feature-Comparison-across-Different-Versions
    "runtime": {
        "mode": "multi_thread",
        "worker_count": 10
    }
}
